<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ua.com.dquality.udrive">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/title_app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SettingsActivity" android:parentActivityName=".MainActivity" android:label="@string/title_drawer_settings">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="ua.com.dquality.udrive.MainActivity" />
        </activity>
        <activity android:name=".QuestionAnswerActivity" android:parentActivityName=".MainActivity" android:label="@string/title_drawer_question_answer">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="ua.com.dquality.udrive.MainActivity" />
        </activity>
        <activity android:name=".PublicOfferActivity" android:parentActivityName=".MainActivity" android:label="@string/title_drawer_public_offer">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="ua.com.dquality.udrive.MainActivity" />
        </activity>
        <activity android:name=".AddressesActivity" android:parentActivityName=".MainActivity" android:label="@string/title_drawer_addresses">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="ua.com.dquality.udrive.MainActivity" />
        </activity>
        <activity android:name=".SupportActivity" android:parentActivityName=".MainActivity" android:label="@string/title_drawer_support">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="ua.com.dquality.udrive.MainActivity" />
        </activity>
    </application>
</manifest>
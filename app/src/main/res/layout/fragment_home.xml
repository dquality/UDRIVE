<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ua.com.dquality.udrive.fragments.HomeFragment">

    <ua.com.dquality.udrive.sliding.SlidingUpPanelLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:sld="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sld:panelHeight="?android:attr/actionBarSize"
        sld:shadowHeight="@dimen/dim_4_dp"
        sld:parallaxOffset="100dp"
        sld:overlay="true"
        sld:dragView="@+id/dragView"
        sld:scrollableView="@+id/sv">

        <!-- MAIN CONTENT -->
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/refresh_main_swipe"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin">

                        <RelativeLayout
                            android:id="@+id/card_holder_state"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            sld:layout_constraintEnd_toEndOf="parent"
                            sld:layout_constraintStart_toStartOf="parent"
                            sld:layout_constraintLeft_toLeftOf="parent"
                            sld:layout_constraintRight_toRightOf="parent"
                            sld:layout_constraintTop_toTopOf="parent"
                            android:padding="@dimen/activity_vertical_margin">

                            <TextView
                                android:id="@+id/card_month_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                                android:textAllCaps="true"/>
                            <TextView
                                android:id="@+id/card_type_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_below="@id/card_month_text"
                                android:textStyle="bold"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                                android:textAllCaps="true"
                                android:layout_toEndOf="@id/card_month_text"
                                android:layout_toRightOf="@id/card_month_text"
                                />
                            <ImageView
                                android:id="@+id/card_barcode_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true"
                                sld:srcCompat="@drawable/ic_bar_code_114dp"
                                android:contentDescription="@string/title_card_barcode"/>
                            <TextView
                                android:id="@+id/card_barcode_number_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true"
                                android:layout_below="@id/card_barcode_image"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                                android:textAllCaps="true"
                                android:layout_toStartOf="@id/card_barcode_image"
                                android:layout_toLeftOf="@id/card_barcode_image"/>
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/circle_state"
                            android:layout_width="192dp"
                            android:layout_height="192dp"
                            android:layout_marginTop="@dimen/element_vertical_margin"
                            android:gravity="center_vertical|center_horizontal"
                            sld:layout_constraintStart_toStartOf="parent"
                            sld:layout_constraintTop_toBottomOf="@id/card_holder_state"/>

                        <TextView
                            android:id="@+id/prev_month_trips_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                            android:textAllCaps="true"
                            android:layout_marginTop="@dimen/element_vertical_margin"
                            android:gravity="end"
                            sld:layout_constraintLeft_toRightOf="@id/circle_state"
                            sld:layout_constraintStart_toEndOf="@id/circle_state"
                            sld:layout_constraintTop_toBottomOf="@id/card_holder_state"
                            android:text="@string/prev_month_trip_title_tmpl"/>

                        <TextView
                            android:id="@+id/prev_month_trips_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="@string/empty_dash"
                            android:textAllCaps="true"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                            android:textStyle="bold"
                            sld:layout_constraintLeft_toRightOf="@id/prev_month_trips_title"
                            sld:layout_constraintStart_toEndOf="@id/prev_month_trips_title"
                            sld:layout_constraintTop_toBottomOf="@id/prev_month_trips_title" />

                        <TextView
                            android:id="@+id/today_trips_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                            android:textAllCaps="true"
                            android:layout_marginTop="@dimen/activity_vertical_margin"
                            android:gravity="end"
                            sld:layout_constraintLeft_toRightOf="@id/circle_state"
                            sld:layout_constraintStart_toEndOf="@id/circle_state"
                            sld:layout_constraintTop_toBottomOf="@id/prev_month_trips_count"
                            android:text="@string/week_trips_title"/>

                        <TextView
                            android:id="@+id/week_trips_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="@string/empty_dash"
                            android:textAllCaps="true"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                            android:textStyle="bold"
                            sld:layout_constraintLeft_toRightOf="@id/today_trips_title"
                            sld:layout_constraintStart_toEndOf="@id/today_trips_title"
                            sld:layout_constraintTop_toBottomOf="@id/today_trips_title" />

                        <TextView
                            android:id="@+id/remains_trips_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                            android:layout_marginTop="@dimen/activity_vertical_margin"
                            android:gravity="end"
                            sld:layout_constraintLeft_toRightOf="@id/circle_state"
                            sld:layout_constraintStart_toEndOf="@id/circle_state"
                            sld:layout_constraintTop_toBottomOf="@id/week_trips_count"
                            android:visibility="visible"/>

                        <TextView
                            android:id="@+id/remains_trips_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="@string/empty_dash"
                            android:textAllCaps="true"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                            android:textStyle="bold"
                            sld:layout_constraintLeft_toRightOf="@id/remains_trips_title"
                            sld:layout_constraintStart_toEndOf="@id/remains_trips_title"
                            sld:layout_constraintTop_toBottomOf="@id/remains_trips_title"
                            android:visibility="visible"/>

                        <TextView
                            android:id="@+id/final_status_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                            android:textAllCaps="true"
                            android:layout_marginTop="@dimen/activity_vertical_margin"
                            android:gravity="end"
                            sld:layout_constraintLeft_toRightOf="@id/circle_state"
                            sld:layout_constraintStart_toEndOf="@id/circle_state"
                            sld:layout_constraintTop_toBottomOf="@id/week_trips_count"
                            android:text="@string/final_status_title"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/final_status_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:textColor="@color/colorTextTitlePlatinum"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                            android:textStyle="bold"
                            sld:layout_constraintLeft_toRightOf="@id/final_status_title"
                            sld:layout_constraintStart_toEndOf="@id/final_status_title"
                            sld:layout_constraintTop_toBottomOf="@id/final_status_title"
                            android:text="@string/title_status_platinum"
                            android:visibility="gone"/>

                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/accrual_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/element_vertical_margin"
                            android:padding="@dimen/activity_horizontal_margin"
                            sld:layout_constraintStart_toStartOf="parent"
                            sld:layout_constraintTop_toBottomOf="@id/circle_state"
                            android:text="@string/accrual_button_title"
                            android:textAllCaps="true"
                            android:background="@drawable/selector_add_accrual_background"/>

                        <TextView
                            android:id="@+id/balance_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                            android:textAllCaps="true"
                            android:layout_marginTop="@dimen/element_vertical_margin"
                            android:gravity="end"
                            sld:layout_constraintLeft_toRightOf="@id/accrual_button"
                            sld:layout_constraintStart_toEndOf="@id/accrual_button"
                            sld:layout_constraintTop_toBottomOf="@id/circle_state"
                            android:text="@string/balance_title"/>

                        <TextView
                            android:id="@+id/balance_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:textColor="@color/colorAccent"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                            android:textStyle="bold"
                            sld:layout_constraintLeft_toRightOf="@id/balance_title"
                            sld:layout_constraintStart_toEndOf="@id/balance_title"
                            sld:layout_constraintTop_toBottomOf="@id/balance_title"
                            android:text="@string/empty_dash"/>

        </android.support.constraint.ConstraintLayout>
                </ScrollView>
        </android.support.v4.widget.SwipeRefreshLayout>
        <!-- SLIDING LAYOUT -->
        <LinearLayout
            android:id="@+id/dragView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            >

            <ImageView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:tint="@color/colorCircleGoldDefault"
                android:gravity="top|center_horizontal"
                android:scaleType="center"
                sld:srcCompat="@drawable/ic_up_arrow_24dp" />

            <ScrollView
                android:id="@+id/sv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ucoins_umarket_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
            </ScrollView>
        </LinearLayout>
    </ua.com.dquality.udrive.sliding.SlidingUpPanelLayout>
</FrameLayout>

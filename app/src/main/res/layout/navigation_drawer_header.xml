<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/header_account_image"
        android:layout_width="@dimen/dim_48_dp"
        android:layout_height="@dimen/dim_48_dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/ic_person_black_24dp"
        android:tint="@color/colorPrimaryLight"
        />
    <TextView
        android:id="@+id/header_account_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/header_account_image"
        android:layout_toEndOf="@id/header_account_image"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        />
    <ImageView
        android:id="@+id/header_account_status_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_4_dp"
        android:layout_below="@+id/header_account_name"
        android:layout_toRightOf="@id/header_account_image"
        android:layout_toEndOf="@id/header_account_image"
        />
    <TextView
        android:id="@+id/header_account_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_4_dp"
        android:layout_marginStart="@dimen/dim_4_dp"
        android:layout_marginTop="@dimen/dim_2_dp"
        android:layout_below="@+id/header_account_name"
        android:layout_toRightOf="@id/header_account_status_image"
        android:layout_toEndOf="@id/header_account_status_image"
        />
</RelativeLayout>
